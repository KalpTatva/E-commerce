@{
    Layout = "~/Views/Shared/_dashboardSeller.cshtml";
}
<h2 class="mt-3">Order List</h2>
<div class=" p-3 w-100 d-flex  align-items-center flex-column  ">
    <div id="OrderContainer" class="p-3 w-100 ">
        <!-- Orders will be loaded here -->
    </div>

    <div class="d-flex justify-content-center m-5 w-100 bg-white">
        <span class="loader3" style="width: 40px; height: 40px;"></span>
    </div>
