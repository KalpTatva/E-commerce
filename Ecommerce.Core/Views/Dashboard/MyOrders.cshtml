@{
    Layout = "~/Views/Shared/_dashboardSeller.cshtml";
}

<h2 class="mt-3">My Orders</h2>
<div class="container p-3 m-3 d-flex align-items-center flex-column ">
    <div id="OrderContainer" class="w-100 p-3 mx-3 bg-white bg-white border rounded-3">
        <!-- Orders will be loaded here -->
    </div>

    <div class="d-flex justify-content-center m-5 w-100 bg-white">
        <span class="loader3 m-5" style="width: 40px; height: 40px;"></span>
    </div>
</div>

<partial name="_ReviewModalPartial.cshtml" />

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        window.successMessage = '@TempData["SuccessMessage"]';
        window.errorMessage = '@TempData["ErrorMessage"]';
        
    </script>
    <script src="~/js/toastr_script.js"></script>
    <script src="~/js/myOrders_script.js"></script>
}