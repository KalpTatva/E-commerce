@using static Ecommerce.Repository.Helpers.Enums
@model Ecommerce.Repository.ViewModels.EditRegisteredUserViewModel

@{
    Layout = "~/Views/Shared/_dashboardSeller.cshtml";
}

<h2 class="mt-3">User Profile</h2>
<div class="d-flex p-2 justify-content-center align-items-center ">
    <div class="LoginContent bg-white p-4 border  rounded">

        <div class="w-100 ">



            <!-- info which can not be changed-->


            <div class="form-floating has-validation my-2 mb-3 w-100">
                <input type="text" class="form-control" id="email-login" placeholder="Email" asp-for="Email" readonly>
                <span asp-validation-for="Email" class="text-danger float-start"></span>
                <label for="email-login">Email</label>
            </div>
            <div class="form-floating mb-3 w-100">
                <input type="text" class="form-control" id="userRole" placeholder="Email" asp-for="RoleId"
                    value="@Enum.GetName(typeof(RoleEnum), Model.RoleId)" readonly>
                <span asp-validation-for="RoleId" class="text-danger float-start"></span>
                <label for="userRole">Role</label>
            </div>
            <div class="d-flex gap-2">
                <div class="form-floating mb-3 w-100">
                    <input type="text" asp-for="FirstName" class="form-control" id="floatingInput"
                        placeholder="First Name" readonly>
                    <label for="floatingInput">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 w-100">
                    <input type="text" asp-for="LastName" class="form-control" id="floatingInput"
                        placeholder="Last Name" readonly>
                    <label for="floatingInput">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end mb-3">
                <button class="btn btn-danger" id="EditContent-btn">Edit</button>
            </div>

            <!-- editable info-->
            <form method="post" id="EditProfileForm" class="d-flex flex-column">

                <input type="hidden" asp-for="UserId">
                <input type="hidden" asp-for="ProfileId">

                <div class="form-floating mb-3 ">
                    <input type="text" asp-for="Address" class="form-control Editable-content" id="floatingInput"
                        placeholder="Address">
                    <label for="floatingInput">Address</label>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <div class="form-floating mb-3 w-100">
                        <select class="form-select Editable-content" asp-for="CountryId" id="countrydropdown"
                            aria-label="Country">
                            <option value="@Model.CountryId">@Model.CountryName</option>

                        </select>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                        <label for="floatingSelect">Country</label>
                    </div>
                    <div class="form-floating mb-3 w-100">
                        <select class="form-select Editable-content" asp-for="StateId" id="statedropdown"
                            aria-label="State">
                            <option value="@Model.StateId">@Model.StateName</option>

                        </select>
                        <label for="floatingSelect">State</label>
                        <span asp-validation-for="StateId" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 w-100">
                        <select class="form-select Editable-content" asp-for="CityId" id="citydropdown"
                            aria-label="City">
                            <option value="@Model.CityId">@Model.CityName</option>

                        </select>
                        <label for="floatingSelect">City</label>
                        <span asp-validation-for="CityId" class="text-danger"></span>

                    </div>
                </div>

                <div class="d-flex gap-2">
                    <div class="form-floating mb-3 w-100">
                        <input type="text" asp-for="PhoneNumber" class="form-control Editable-content"
                            id="floatingInput" placeholder="Phone">
                        <label for="floatingInput">Phone</label>
                        <span asp-validation-for="PhoneNumber" class="text-danger "></span>
                    </div>
                    <div class="form-floating mb-3 w-100">
                        <input type="text" asp-for="Pincode" class="form-control Editable-content" id="floatingInput"
                            placeholder="Zipcode">
                        <label for="floatingInput">Pincode</label>
                        <span asp-validation-for="Pincode" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end mb-3">
                    <button type="submit" class="btn btn-success Editable-content">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        window.successMessage = '@TempData["SuccessMessage"]';
        window.errorMessage = '@TempData["ErrorMessage"]';
    </script>
    <script src="~/js/toastr_script.js"></script>
    <script src="~/js/addressHelper_script.js"></script>
    <script src="~/js/editProfile_script.js"></script>
}