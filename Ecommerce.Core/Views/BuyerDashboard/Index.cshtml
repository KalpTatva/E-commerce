@{
    Layout = "~/Views/Shared/_dashboardSeller.cshtml";
}

<div class="container p-3 d-flex align-items-center flex-column ">
    <!-- search -->

    <div class="position-relative bg-white border mx-2 border-1 rounded w-50">
        <input type="text" id="searchInput" placeholder="Search item here..." class="search_bar w-100">

        <img src="~/images/search-icon.svg" width="20px" class="search_bar_img">
    </div>


    <!--all products view-->
    <div id="ProductsContainer" class="d-flex w-100 gap-3 mt-5 flex-wrap justify-content-center align-items-start">

    </div>
    <div class="d-flex justify-content-center m-5">
        <span class="loader3" style="width: 40px; height: 40px;"></span>
    </div>

</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        window.successMessage = '@TempData["SuccessMessage"]';
        window.errorMessage = '@TempData["ErrorMessage"]';
        

    </script>
    <script src="~/js/toastr_script.js"></script>
    <script src="~/js/BuyerDashboardIndex_script.js"></script>
}