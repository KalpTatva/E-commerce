@model Ecommerce.Repository.ViewModels.ForgetPasswordViewModel

<div class="d-flex p-2 justify-content-center align-items-center ">
    <div class="LoginContent bg-white p-4 border  rounded-end">
        <h1 class="display-4 text-center">E-commerce</h1>
        <h3 class="display-6 mb-4 text-center">Reset Password</h3>

        <div class="w-100 ">
            <form class="resetPasword-form" asp-action="ResetPassword" asp-controller="Home" method="post" class="d-flex flex-column">
            
            <input asp-for="Email" type="hidden" value="@Model.Email" />
            <input asp-for="Token" type="hidden" value="@Model.Token" />

            <!-- New Password Field -->
            <div class="position-relative password-section my-2">
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword2"
                    placeholder="New Password*">
                <div class="eye z-10">
                    <i class="bi bi-eye openeye1 eye inactive"></i>
                    <i class="bi bi-eye-slash closeeye1 eye active"></i>
                </div>
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>

            <!-- Confirm Password Field -->
            <div class="position-relative password-section my-2">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword3"
                    placeholder="Confirm New Password*">
                <div class="eye z-10">
                    <i class="bi bi-eye openeye2 eye inactive"></i>
                    <i class="bi bi-eye-slash closeeye2 eye active"></i>
                </div>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

            <!-- Error Message Display -->
            <div class="text-danger">@TempData["ErrorMessage"]</div>


            <div class="">
                <button type="submit" class="w-100 btn btn-color text-white rounded-3">
                    <span class="login">Reset Password</span>
                    <span class="loader2 " style="width: 20px; height: 20px;"></span>
                </button>
            </div>

        </form>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <a class="text-decoration-none text-center mt-3" asp-action="Index" asp-controller="Home">back to login</a>
        </div>

    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(".login").show();
        $(".loader2").hide();

        window.successMessage = '@TempData["SuccessMessage"]';
        window.errorMessage = '@TempData["ErrorMessage"]';

        $(document).ready(function () {

            $(document).on('submit', '.resetPasword-form', function () {
                $(".login").hide();
                $(".loader2").show();
            });
        })
    </script>
    <script src="~/js/toastr_script.js"></script>
}